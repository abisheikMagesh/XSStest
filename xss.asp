<%@ Language="VBScript" %>
<!DOCTYPE html>
<html>
<head>
    <title>Alert Box Example</title>
    <script type="text/javascript">
        function showAlert() {
            alert("This is an alert box!");
        }
    </script>
</head>
<body onload="showAlert()">
    <h1>Welcome to the Alert Box Example</h1>
    <p>This page will show an alert box when it is loaded.</p>
</body>
</html>
